{
  "version": 2,
  "name": "telepathy",
  "build": {
    "env": {
      "REACT_APP_KAKAO_KEY": "341ab1554e15717d7cb41b887719ca53"
    }
  },
  "builds": [
    {
      "src": "www/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/**/index.js",
      "use": "@now/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=31536000,immutable" },
      "dest": "/www/static/$1"
    },
    { "src": "/favicon.ico", "dest": "/www/favicon.ico" },
    {
      "src": "/android-chrome-512x512.png",
      "dest": "/www/android-chrome-512x512.png"
    },
    {
      "src": "/android-chrome-192x192.png",
      "dest": "/www/android-chrome-192x192.png"
    },
    { "src": "/asset-manifest.json", "dest": "/www/asset-manifest.json" },
    { "src": "/manifest.json", "dest": "/www/manifest.json" },
    { "src": "/precache-manifest.(.*)", "dest": "/www/precache-manifest.$1" },
    {
      "src": "/service-worker.js",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/www/service-worker.js"
    },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/www/index.html"
    }
  ]
}
